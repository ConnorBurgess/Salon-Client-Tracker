@{
  Layout = "_Layout";
}
@using HairSalon.Models;


<h1>Clients</h1>

@if (@Model.Count == 0)
{
  <h3>No Clients are available in database</h3>
} 

<ul>
  @foreach(Client client in Model)
  {
    <li>@Html.ActionLink($"{client.Name}", "Details", new { id = client.Id })</li>
  }
</ul>

<p>@Html.ActionLink("Add a Client to Database", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Stylists")</p>